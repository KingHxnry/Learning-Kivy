<CircleButton@Button>:
    #size_hint: (None, None)
    size: (min(self.width,self.height),min(self.width,self.height))
    font_size: 32
    canvas.before:
        Color:
            rgba: ((0.12,0.12,0.12,1) if self.state == "normal" else (.5,.5,.5,1))
        Ellipse:
            pos: self.pos
            size: self.size

<ZeroButton@Button>:
    #size_hint: (None, None)
    size: (min(self.width,self.height),min(self.width,self.height))
    font_size: 32
    border_radius: [45]
    canvas.before:
        Color:
            rgba: ((0.12,0.12,0.12,1) if self.state == "normal" else (.5,.5,.5,1))
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: self.border_radius

<OrangeCircleButton@Button>:
    #size_hint: (None, None)
    size: (min(self.width,self.height),min(self.width,self.height))
    font_size: 32
    canvas.before:
        Color:
            #rgba: ((0.53,0.33,0.13,1) if self.state == "normal" else (.45,.33,.22,1))  #orange
            #rgba: ((1,0,0.64,1) if self.state == "normal" else (.45,.33,.22,1))     #pink
            rgba: ((0,1,0.60,1) if self.state == "normal" else (0,.30,.23,1))
        Ellipse:
            pos: self.pos
            size: self.size

<LightCircleButton@Button>:
    #size_hint: (None, None)
    size: (min(self.width,self.height),min(self.width,self.height))
    font_size: 32
    canvas.before:
        Color:
            rgba: ((0.6,0.6,0.6,1) if self.state == "normal" else (.35,.35,.35,1))
        Ellipse:
            pos: self.pos
            size: self.size


<MyGrid>:
    id: calc
    display: entry
    rows: 6
    padding: 10
    spacing: 10

    BoxLayout:
        Label:
            text_size: self.size
            halign: 'right'
            id: entry
            font_size: 50
            multiline: False

    BoxLayout:
        spacing: 10
        LightCircleButton:
            text: "C"
            color: 0, 0, 0, 1
            on_press: entry.text = ''
        LightCircleButton:
            text: "+/-"
            color: 0, 0, 0, 1
            on_press: entry.text = '-' + entry.text
        LightCircleButton:
            text: "%"
            color: 0, 0, 0, 1
            on_press: entry.text += self.text
        OrangeCircleButton:
            text: "/"
            color: 0, 0, 0, 1
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        CircleButton:
            text: "7"
            on_press: entry.text += self.text
        CircleButton:
            text: "8"
            on_press: entry.text += self.text
        CircleButton:
            text: "9"
            on_press: entry.text += self.text
        OrangeCircleButton:
            text: "*"
            color: 0, 0, 0, 1
            on_press: entry.text += self.text


    BoxLayout:
        spacing: 10
        CircleButton:
            text: "4"
            on_press: entry.text += self.text
        CircleButton:
            text: "5"
            on_press: entry.text += self.text
        CircleButton:
            text: "6"
            on_press: entry.text += self.text
        OrangeCircleButton:
            text: "-"
            color: 0, 0, 0, 1
            on_press: entry.text += self.text


    BoxLayout:
        spacing: 10
        CircleButton:
            text: "1"
            on_press: entry.text += self.text
        CircleButton:
            text: "2"
            on_press: entry.text += self.text
        CircleButton:
            text: "3"
            on_press: entry.text += self.text
        OrangeCircleButton:
            text: "+"
            color: 0, 0, 0, 1
            on_press: entry.text += self.text

    GridLayout:
        cols: 2
        spacing: 10
        ZeroButton:
            text: "0"
            on_press: entry.text += self.text
        BoxLayout:
            spacing: 10

            CircleButton:
                text: "."
                on_press: entry.text += self.text
            OrangeCircleButton:
                text: "="
                color: 0, 0, 0, 1
                on_press: root.calculate(entry.text)



